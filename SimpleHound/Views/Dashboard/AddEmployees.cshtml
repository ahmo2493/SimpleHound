@model List<SimpleHound.SQLDatabase.MenuEmployees>


<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">


<partial name="~/Views/Dashboard/_MobileSidebarPartial.cshtml" />

<div class="row">
    <div class="col col-md-3 col-lg-2 d-none d-md-block BottomSpace">

        <partial name="~/Views/Dashboard/_SidebarPartial.cshtml" />

    </div>

    @*----------------------------------------------  Main Info -------------------------------------------------------*@

    <div class="col-md-5 col-lg-6 text-center" onclick="w3_close()">

        <h1 class="display-4">The Dream Team</h1>
        We’ll create a unique password for each employee name
        <div class="pt-5 mx-auto" style="width: 100%; max-width: 450px;">    
            
            <div class="text-danger" style="padding-left: 50%"> @ViewData["StaffError"]</div>

            <form method="post">
                <div class="input-group mb-3">

                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">Name</span>
                    </div>

                    <input type="text" class="form-control " value="" name="EmployeeName" placeholder="Adam" aria-label="Username" aria-describedby="basic-addon1">
                </div>

                <div>
                    <label class="radio-inline"><input type="radio" name="position" value="waiter">Waiter</label>&nbsp;&nbsp;&nbsp;
                    <label class="radio-inline"><input type="radio" name="position" value="kitchen">Kitchen</label>
                </div>

                <button type="submit" name="addWaiter" value="waiter" class="btn btn-lg btn-secondary text-center m-5">+Add</button>
            </form>
        </div>

    </div>



    <div class="col-md-4 col-lg-4 bg-light pt-5 " onclick="w3_close()">
        <div class="row">
            <div class="col-6">
                <p class=" font-weight-bold rounded pl-2" style="background-color:gainsboro"> Name </p>
            </div>
            <div class="col-6"><p class=" font-weight-bold rounded pl-2" style="background-color:gainsboro"> Password </p></div>

        </div>
        <form method="post">

            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="row">
                    <div class="col-6"> <p><button type="submit" name="DeleteItem" id="DeleteItem" value="@i" class=" rounded btn btn-sm border bg-light">X</button> @Model[i].Name</p></div>
                    <div class="col-6"> <p>  @Model[i].Password</p></div>
                </div>

            }
        </form>
        <p class="mb-5"></p>
    </div>
   

</div>
